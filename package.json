{
  "name": "npm-publish-files",
  "version": "1.2.4",
  "description": "Copy special files `npm publish` always includes to a sub directory",
  "author": "Iiro JÃ¤ppinen <iiro@jappinen.fi> (https://iiro.fi)",
  "license": "MIT",
  "homepage": "https://github.com/iiroj/npm-publish-files",
  "repository": "github:iiroj/npm-publish-files",
  "bugs": "https://github.com/iiroj/npm-publish-files/issues",
  "bin": "cli.js",
  "files": [
    "cli.js"
  ],
  "engines": {
    "node": ">=8.10"
  },
  "scripts": {
    "watch": "rollup -cw",
    "lint:base": "eslint --ext .js,.ts",
    "lint": "npm run lint:base -- .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "build": "rollup -c",
    "version": "standard-version --no-verify"
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:base --"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm run typecheck && npm test && npm run build"
    }
  },
  "dependencies": {
    "commander": "^6.1.0",
    "glob": "^7.1.6",
    "minimatch": "^3.0.4",
    "npm-packlist": "^2.1.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.14",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^14.11.2",
    "@types/npm-packlist": "^1.1.1",
    "@types/yargs": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "commitlint": "^11.0.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "rollup": "^2.28.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "keywords": [
    "copy",
    "dir",
    "files",
    "ignore",
    "npm",
    "publish"
  ]
}
