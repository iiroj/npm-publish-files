{
  "name": "npm-publish-files",
  "version": "1.0.17",
  "description": "Copy special files `npm publish` always includes to a sub directory",
  "author": "Iiro JÃ¤ppinen <iiro@jappinen.fi> (https://iiro.fi)",
  "license": "MIT",
  "homepage": "https://github.com/iiroj/npm-publish-files",
  "repository": "github:iiroj/npm-publish-files",
  "bugs": "https://github.com/iiroj/npm-publish-files/issues",
  "bin": "cli.js",
  "files": [
    "cli.js"
  ],
  "engines": {
    "node": ">= 8.10"
  },
  "scripts": {
    "watch": "rollup -cw",
    "lint": "tslint -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "build": "rollup -c",
    "version": "standard-version --no-verify"
  },
  "lint-staged": {
    "*.{ts}": "npm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm test && npm run build"
    }
  },
  "dependencies": {
    "fast-glob": "^3.0.4",
    "fs-extra": "^8.1.0",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.1.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.2",
    "@types/yargs": "^13.0.2",
    "commitlint": "^8.1.0",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "rollup": "^1.20.2",
    "rollup-plugin-typescript2": "^0.23.0",
    "standard-version": "^7.0.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3"
  },
  "keywords": [
    "copy",
    "dir",
    "files",
    "ignore",
    "npm",
    "publish"
  ]
}
