    "@types/fs-extra": "^5.0.4",
    "@types/node": "^10.12.18",
    "@types/yargs": "^12.0.5",
    "prettier": "^1.15.3",
    "rollup": "^1.1.0",
    "rollup-plugin-typescript2": "^0.18.1",
    "standard-version": "^4.4.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "keywords": [
