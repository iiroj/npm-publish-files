{
  "name": "npm-publish-files",
  "version": "1.0.20",
  "description": "Copy special files `npm publish` always includes to a sub directory",
  "author": "Iiro JÃ¤ppinen <iiro@jappinen.fi> (https://iiro.fi)",
  "license": "MIT",
  "homepage": "https://github.com/iiroj/npm-publish-files",
  "repository": "github:iiroj/npm-publish-files",
  "bugs": "https://github.com/iiroj/npm-publish-files/issues",
  "bin": "cli.js",
  "files": [
    "cli.js"
  ],
  "engines": {
    "node": ">=8.10"
  },
  "scripts": {
    "watch": "rollup -cw",
    "lint": "tslint -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "build": "rollup -c",
    "version": "standard-version --no-verify"
  },
  "lint-staged": {
    "*.{ts}": "npm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm run typecheck && npm test && npm run build"
    }
  },
  "dependencies": {
    "fast-glob": "^3.1.1",
    "fs-extra": "^8.1.0",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.2.0",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.1",
    "@types/yargs": "^13.0.4",
    "commitlint": "^8.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.0-beta.14",
    "prettier": "^1.19.1",
    "rollup": "^1.27.14",
    "rollup-plugin-typescript2": "^0.25.3",
    "standard-version": "^7.0.1",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "tslint-plugin-prettier": "^2.1.0",
    "tslint-react": "^4.1.0",
    "typescript": "^3.7.4"
  },
  "keywords": [
    "copy",
    "dir",
    "files",
    "ignore",
    "npm",
    "publish"
  ]
}
